<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_border">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:textSize="@dimen/h1"
        android:textAlignment="center"
        />

    <TextView
        android:labelFor="@id/register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_email"
        android:textSize="@dimen/h4"
        />
    <EditText
        android:id="@+id/register_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_big"
        android:hint="@string/hint_email"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textColorHint="#8D6E63"
        tools:ignore="LabelFor,TextFields,VisualLintTextFieldSize" />

    <TextView
        android:labelFor="@id/register_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_username"
        android:textSize="@dimen/h4"
        />
    <EditText
        android:id="@+id/register_username"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_big"
        android:hint="@string/hint_username"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textColorHint="#8D6E63"
        tools:ignore="LabelFor,VisualLintTextFieldSize" />

    <TextView
        android:labelFor="@id/register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_password"
        android:textSize="@dimen/h4"
        />
    <EditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_big"
        android:hint="@string/hint_password"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:textColorHint="#8D6E63"
        tools:ignore="LabelFor,VisualLintTextFieldSize" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/register"
        android:textSize="@dimen/button_medium"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/from_register_to_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/have_account"
        android:textAlignment="center"
        android:textSize="@dimen/h5"
        />
</LinearLayout>